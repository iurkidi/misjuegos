{% extends 'uniMisJuegosBundle::layout.html.twig' %}

{% block central %} 
    <h1>juego list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Puntuacion</th>
                <th>Tipo</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td><a href="{{ path('juego_show', { 'id': entity.id }) }}">{{ entity.nombre }}</a></td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.puntuacion }}</td>
                 <td>{{ entity.tipo.nombre }}</td>               
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('juego_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
